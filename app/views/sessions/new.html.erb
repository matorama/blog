<div class="container">

  <h1>Log In</h1>
  <br>
  <%= form_for :login do |f| %>
    <div class="login col-md-8 col-md-offset-2">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="login col-md-8 col-md-offset-2">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="login col-md-8 col-md-offset-2">
      <%= f.submit 'Log In' %>
    </div>
  <% end %>
</div>