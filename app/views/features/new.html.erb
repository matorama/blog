

<h1>Create a New Blog Entry</h1>

<div class="container">
    <%= form_for(@feature) do |f| %>
      <ul>
      <% @feature.errors.full_messages.each do |feature| %>
        <li><%= error %></li>
      <% end %>
      </ul>
      
      <div class="col-md-8 col-md-offset-2">
          <p>
            <%= f.label :title %><br />
            <%= f.text_field :title %>
          </p>
          <p>
            <%= f.label :body %><br />
            <%= f.text_area :body %>
          </p>
          <p>
            <%= f.submit %>
          </p>
       </div>
    <% end %>
</div>