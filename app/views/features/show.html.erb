		<div class="header">
			<h1>Mat's Blog</h1>
		</div>

<div class="container">
	
		<div class="feature col-md-8 col-md-offset-2">
			<h2><%= @feature.title %></h2>

			<p class="date"> Created at <%= @feature.created_at.time.strftime("%m/%d/%Y %I:%M%p")%></p>
		  

			<p><%= @feature.body %></p>
			<br>
			<br>
		</div>

		<div class="com col-md-8 col-md-offset-2">
			<!-- <h3>Comments</h3> -->
			<%=render partial: 'features/comment', collection: @feature.comments %>
		</div>
		<div class="com_form col-md-8 col-md-offset-2">
			<%=render partial: 'comments/form' %>
		</div>
			
		<div class="footer col-md-8 col-md-offset-2">
			<%=link_to "<< Back to Blog Post List", features_path %>



		<% if current_user %>
			<%= link_to "Delete", feature_path(@feature), method: :delete, data: {confirm: "Really delete the blog post?"}%> 
			<%= link_to "Edit", edit_feature_path(@feature) %>
		</div>
		


		<%end%>
		

</div>



